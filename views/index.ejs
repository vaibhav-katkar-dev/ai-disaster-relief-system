<!DOCTYPE html>
<html>
<head>
  <title>Realistic Route & Distance</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.css" />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.min.js"></script>
  <style>
    #map {
      height: 100vh;
      width: 100%;
    }
    .leaflet-routing-container {
      font-size: 14px;
    }
  </style>
</head>
<body>
  <div id="map"></div>

  <script>
    const map = L.map('map').setView([15.2993, 74.1240], 6);
  
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors',
    }).addTo(map);
  
    // ‚úÖ Custom icons for start and end
    const startIcon = L.icon({
      iconUrl: 'https://cdn-icons-png.flaticon.com/512/684/684908.png', // start flag icon
      iconSize: [30, 30],
      iconAnchor: [15, 30],
      popupAnchor: [0, -30],
    });
  
    const endIcon = L.icon({
      iconUrl: 'https://cdn-icons-png.flaticon.com/512/149/149059.png', // end point icon
      iconSize: [30, 30],
      iconAnchor: [15, 30],
      popupAnchor: [0, -30],
    });
  
    const control = L.Routing.control({
      waypoints: [
        L.latLng(12.9716, 77.5946), // Bangalore
        L.latLng(17.3850, 78.4867), // Hyderabad
      ],
      routeWhileDragging: true,
      show: true,
      collapsible: true,
      lineOptions: {
        styles: [{ color: 'blue', opacity: 0.8, weight: 6 }]
      },
      createMarker: function(i, waypoint, n) {
        if (i === 0) {
          console.log(waypoint.latLng);
          return L.marker(waypoint.latLng, { icon: startIcon }).bindPopup('üö© Start: Bangalore');
        } else {
          return L.marker(waypoint.latLng, { icon: endIcon }).bindPopup('üèÅ End: Hyderabad');
        }
      }
    }).addTo(map);
  
    control.on('routesfound', function(e) {
      const route = e.routes[0].summary;
      alert(`‚úÖ Distance: ${(route.totalDistance / 1000).toFixed(2)} km\n‚è±Ô∏è Duration: ${(route.totalTime / 60).toFixed(2)} mins`);
    });
  </script>
  
</body>
</html>
